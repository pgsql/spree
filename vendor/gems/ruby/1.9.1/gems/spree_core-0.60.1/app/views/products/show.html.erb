<% @body_id = 'product-details' %>
<h1><%= accurate_title %></h1>

<div id="product-images">
  <%= hook :product_images do %>
      <div id="main-image">
        <%= render 'image' %>
      </div>
      <div id="thumbnails">
        <%= render 'thumbnails', :product => @product %>
      </div>
  <% end %>
</div>

<div id="product-description">
  <%= hook :product_description do %>
      <%= product_description(@product) rescue t("product_has_no_description") %>
  <% end %>
  <%= hook :product_properties do %>
      <%= render 'properties' %>
  <% end %>
</div>

<%= hook :cart_form do %>
    <div id="cart-form">
      <%= render 'cart_form' %>
    </div>
<% end %>
<br/>

<div id="fb-root"></div>
<script src="http://connect.facebook.net/en_US/all.js#appId=166078963469410&amp;xfbml=1"></script>
<fb:like href="<%= request.protocol %><%= request.host_with_port %>/products/<%= params[:id] %>" send="false" layout="button_count" width="50" show_faces="true" action="like" font=""></fb:like>
<%= render 'taxons' %>

